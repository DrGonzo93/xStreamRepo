<addons>
<addon id="plugin.video.xstream" name="xStream" version="3.5.5" provider-name="xStream-Team">
 <requires>
   <import addon="xbmc.python"                 version="2.14.0"/>
   <import addon="repository.xstream"          version="1.1.1" />
   <import addon="script.module.urlresolver"   version="3.0.0"/>
   <import addon="script.module.metahandler"   version="1.0.0"/>
 </requires>
 <extension point="xbmc.python.pluginsource" library="default.py">
   <provides>video</provides>
 </extension>
 <extension point="xbmc.addon.metadata">
   <summary lang="de">Watch xStream!</summary>
   <description lang="de">Mit diesem Addon kannst du auf alle angebotenen Streams verschiedenster deutschen Quellen zugreifen</description>
